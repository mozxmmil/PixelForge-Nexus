generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_SUPABASE")
}

enum ProjectStatus {
  PLANNED
  ACTIVE
  COMPLETED
  ON_HOLD
  CANCELLED
}

model Users {
  id           String    @id @default(uuid())
  name         String?
  email        String    @unique
  passwordHash String
  role         UserRole
  createdAt    DateTime  @default(now())
  projects     Projects[]     @relation("CreatedProjects")
  assignments  Assignments[]
  assignedBy Assignments[] @relation("AssignedBy")
  documents    Documents[]    @relation("UploadedByDocuments")
}

model Clientdata {
    id String @id @default(uuid())
    name String
    phone String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    projects Projects[] @relation("clientInto")
    
    }

model Projects {
  id          String    @id @default(uuid())
  name        String
  description String
  deadline    DateTime
  status      ProjectStatus
  createdBy   String
  createdByUser Users     @relation("CreatedProjects", fields: [createdBy], references: [id])
  clinetId String
  clientInfo Clientdata @relation("clientInto",fields: [clinetId],references: [id])
  assignments Assignments[]
  documents   Documents[]
}

model Assignments {
  id         String   @id @default(uuid())
  projectId  String
  userId     String
  assignedBy String
  assignedAt DateTime
  project    Projects @relation(fields: [projectId], references: [id])
  user       Users    @relation(fields: [userId], references: [id])
  assignedByUser Users @relation("AssignedBy", fields: [assignedBy], references: [id])
}

model Documents {
  id         String   @id @default(uuid())
  projectId  String
  fileName   String
  filePath   String
  uploadedBy String
  uploadDate DateTime
  project    Projects @relation(fields: [projectId], references: [id])
  uploadedByUser Users @relation("UploadedByDocuments", fields: [uploadedBy], references: [id])
}



enum UserRole {
  PROJECT_LEAD @map("Project Lead")
  ADMIN        @map("ADMIN")
  DEVELOPER    @map("Developer")
}

